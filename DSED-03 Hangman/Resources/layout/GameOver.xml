<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="GAME OVER"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ffb71c1c"
        android:paddingVertical="50px"
        android:textSize="75px" />
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgGameOverFruit" />
    <TextView
        android:text="User:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvGOCurrentUser"
        android:paddingTop="10px"
        android:textAlignment="center"
        android:textSize="35px"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold" />
    <TextView
        android:text="Score:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvGameOverScore"
        android:textAlignment="center"
        android:textSize="35px"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold" />
    <TextView
        android:text="All the fruits have Expired. Do you wanna Eat some more?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textColor="#ff1a237e"
        android:paddingTop="20px" />
    <Button
        android:text="Play Again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlyAgain" />
    <Button
        android:text="Main Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenu" />
    <Button
        android:text="Leaderboards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnHighscore" />

</LinearLayout>
